<%= form_with(model: chat, url: chats_path, class: "space-y-6") do |form| %>
  <% if chat.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 p-4 rounded">
      <h2 class="font-semibold"><%= pluralize(chat.errors.count, "error") %> prohibited this chat from being saved:</h2>
      <ul class="list-disc list-inside">
        <% chat.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :model, "Select AI model:", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :model,
        options_for_select(Model.pluck(:name, :model_id).unshift(["Default (#{RubyLLM.config.default_model})", nil]), @selected_model),
        {},
        class: "w-full max-w-xl border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.text_field :prompt, class: "w-full max-w-xl border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500",
        placeholder: "What would you like to discuss?", autofocus: true %>
  </div>

  <div>
    <%= form.submit "Start new chat", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>
